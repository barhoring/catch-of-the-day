/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translateX(-120%)
  max-height: 0
  padding 0 !important
  transition 0.25s
  &.order-enter-active
    max-height: 60px
    padding 2rem 0 !important
    transform: translateX(0)

// .order-exit
