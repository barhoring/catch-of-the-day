//   transition 5s
//   &.order-exit-active
//     background green

.order-exit
  transform: translateX(0)
  transition 0.25s
  &.order-exit-active
    padding 0 !important
    transform: translateX(120%)

.count-enter
  transform translateY(100%)
  transition: 0.35s
  &.count-enter-active
    transform translateY(0)

.count-exit
  transform translateY(0)
  transition: 0.35s
  position: absolute
  left 0
  bottom 0
  &.count-exit-active
    transform translateY(-100%)